<div class="wrap">
  <div class="index_wrapping">
    
    <% if current_user && current_user.admin %>
      <div class="admin clearfix">
        <%= link_to 'New Post', new_post_path %> | 
        <%= link_to "New Category", new_category_path %> | 
        <%= link_to 'Sing Out', destroy_user_session_path, method: :delete %>
      </div>
    <% end %>
    <p>All Categories</p>
    <ul>
      <% Category.all.each do |cat| %>
        <li>#<%= link_to cat.name, posts_path(category: cat.name) %></li>
      <% end %>
    </ul>

    <!-- Only in Navbar
    <% Category.where(display_in_navbar: true).each do |cat| %>
      <%= link_to cat.name, posts_path(category: cat.name) %>
    <% end %> -->

    <table id="customers">
      <thead>
        <tr>
          <th>Title</th>
          <th>Category</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.title %></td>
            <td><%= post.category.name %></td>
            <td><%= link_to 'Show', post %></td>
            <td><%= link_to 'Edit', edit_post_path(post) %></td>
            <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>